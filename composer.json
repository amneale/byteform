{
    "name": "amneale/byteform",
    "description": "PHP library for parsing byte amounts",
    "type": "library",
    "authors": [
        {
            "name": "Adam Neale",
            "email": "adam@adam-neale.co.uk"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpspec/phpspec": "^7.5",
        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Amneale\\ByteForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Amneale\\ByteForm\\": "spec/"
        }
    }
}
